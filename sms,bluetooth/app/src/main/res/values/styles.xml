<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>






    <!-- Fragment -->
    <style name="AppTheme.FragmentContainer">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- List -->
    <style name="AppTheme.TwoLineListUpperLineText">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TwoLineListLowerLineText">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.List">
        <item name="android:background">#FFFFFF</item>
        <item name="android:fadingEdgeLength">3dip</item>
        <item name="android:divider">#FFFFFF</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="AppTheme.ListItemContainer">
        <item name="android:background">#EFEFEF</item>
        <item name="android:paddingBottom">2dip</item>
    </style>
    <style name="AppTheme.ConnectionInfoContainer">
        <item name="android:background">@color/gray3</item>
    </style>
    <style name="AppTheme.ConnectionInfoText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/graye</item>
    </style>


    <!-- Input types -->
    <style name="AppTheme.FormContainer">
        <item name="android:background">#E0E0E0</item>
        <item name="android:paddingBottom">2dip</item>
    </style>

    <style name="AppTheme.FormSpinner">
        <item name ="android:textSize">10sp</item>
        <item name="android:textColor">#3F3F3F</item>
    </style>

    <style name="AppTheme.FormText">
        <item name ="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="AppTheme.FormEditText">
        <item name ="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:privateImeOptions">defaultInputmode=english;symbol=true</item>
    </style>

    <style name="AppTheme.FormURLEditText">
        <item name ="android:textSize">10sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:privateImeOptions">defaultInputmode=english;symbol=true</item>
    </style>




    </resources>
